{
  "info": {
    "_postman_id": "4f622f31-328a-4506-95bd-66359cfbe749",
    "name": "Test Explore With Me - Categories",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin",
      "item": [
        {
          "name": "Create category (201)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"201 Created and save categoryId\", function () {",
                  "  pm.response.to.have.status(201);",
                  "  pm.response.to.be.json;",
                  "",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.id).to.be.a('number');",
                  "  pm.expect(body.name).to.be.a('string');",
                  "",
                  "  pm.collectionVariables.set('categoryId', body.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"name\": \"Музыка\" }"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/categories",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "categories"]
            }
          }
        },
        {
          "name": "Create duplicate category (409)",
